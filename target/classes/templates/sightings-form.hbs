{{#partial "title"}}
    New Sighting
{{/partial}}

{{#partial "content"}}
    <form class="form-group" action="/sightings" method="post">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label for="ranger" class="input-group-text"> Ranger: </label>
            </div>
            <select class="custom-select" id="ranger" name="ranger" required>
                {{#each rangers}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label for="animal" class="input-group-text"> Animal: </label>
            </div>
            <select class="custom-select" id="animal" name="animal" required>
                {{#each animals}}
                    <option value="{{id}}">{{species}}</option>
                {{/each}}
            </select>
        </div>


        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label for="location" class="input-group-text"> Location: </label>
            </div>
            <select class="custom-select" id="location" name="location" required>
                {{#each places}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>

        </div>


        <button type="submit" class="btn btn-outline-success btn-lg">Submit</button>

    </form>


{{/partial}}

{{> layout.hbs}}